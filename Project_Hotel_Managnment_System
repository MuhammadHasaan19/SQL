UPDATE Hotel
SET Location = 'Lahore'
WHERE Hotel_Name = 'Grand Hotel';

# Update the number of rooms in the hotel.
UPDATE Hotel
SET Number_of_Rooms = 500
WHERE Hotel_Name = 'Sheraton Hotel';

# Update the location of the hotel.
UPDATE Hotel
SET Location= 'Karachi'
WHERE Hotel_Name = 'W Hotel';

# Update the number of rooms in the hotel.
UPDATE Hotel
SET Number_of_Rooms = 100
WHERE Hotel_Name = 'Trump International Hotel';

