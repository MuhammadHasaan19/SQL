#DROP DATABASE Hotel_Managnment_System; 
CREATE DATABASE  Hotel_Managnment_System; 
USE  Hotel_Managnment_System; 
SET SQL_SAFE_UPDATE=0;

#  ------ Creation of Table -----

CREATE TABLE  HOTEL(
Hotel_Name varchar(256) NOT NULL,
Location varchar(256) NOT NULL,
Number_of_Room int,
PRIMARY KEY( Hotel_Name)
select * from HOTEL;

);
CREATE TABLE GUEST(
Guest_id INT NOT NULL AUTO_INCREMENT,
Guest_Nmae varchar(266) NOT NULL,
Room_type varchar(266),
Phone_Number varchar(10) not null,
Email_Adress varchar(266),
Paynment_Inform varchar(266) not null,
Adress varchar(266) not null,
  PRIMARY KEY (Guest_id)

);
desc GUEST;
select * from Guest

CREATE TABLE BOOKING(
guest_booked_id INT NOT NULL,
booking_time int NOT NULL,
Booking_date DATE NOT NULL,
Total_price INT NOT NULL,
PRIMARY KEY (guest_booked_id)

);
select * from BOOKING;

CREATE TABLE RESERVATION(
Reservation_id int ,
Guest_Nmae varchar(266) NOT NULL,
Room_Reserved varchar(266) not null,
Check_in DATE NOT NULL,
Check_out DATE NOT NULL,
Total_Cost int,
PRIMARY KEY (Reservation_id)
);
select * from RESERVATION;

CREATE TABLE  EMPLOYEE(
Employee_id INT NOT NULL AUTO_INCREMENT,
Employee_Nmae varchar(266) NOT NULL,
Employee_Positon varchar(266) NOT NULL,
Contact_Information VARCHAR(266) NOT NULL
);
select * from  EMPLOYEE;

CREATE TABLE  Department(
Departnmet_id int NOT NULL AUTO_INCREMENT,
Department_name VARCHAR(255) NOT NULL,
Employee_Positon varchar(266) NOT NULL,
Contact_Information VARCHAR(266) NOT NULL,
PRIMARY KEY (Departnmet_id)
);

CREATE TABLE  Room(
Room_id int NOT NULL AUTO_INCREMENT,
Room_typee varchar(266) NOT NULL,
Occupancy_capacity VARCHAR(266) NOT NULL,
 Price_per_Night INT NOT NULL,
 PRIMARY KEY (Room_id)

); 

